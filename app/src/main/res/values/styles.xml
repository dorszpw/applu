    <style name="actionButtonStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:alpha">0.8</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="lastAppButtonStyle">
        <item name="android:layout_width">37dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:alpha">0.8</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@null</item>
    </style>

    <style name="lastAppButtonStyleTight" parent="lastAppButtonStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@null</item>
    </style>

    <style name="lastAppButtonStyleTightLarge" parent="lastAppButtonStyleTight">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:src">@null</item>
    </style>

    <style name="searchTextStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_weight">2</item>
    <item name="android:background">@null</item>
    <item name="android:clickable">true</item>
    <item name="android:paddingLeft">5dp</item>
    <item name="android:paddingRight">5dp</item>
    <item name="android:singleLine">true</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="searchTextStyleBlack" parent="searchTextStyle">
        <item name="android:textColor">@color/lightGrey</item>

    </style>
    <style name="searchTextStyleBlackL" parent="searchTextStyleBlack">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="searchTextStyleWhite" parent="searchTextStyle">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="searchTextStyleWhiteL" parent="searchTextStyleWhite">
        <item name="android:textSize">18dp</item>
    </style>


</resources>
