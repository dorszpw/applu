<resources>

    <!-- Base application theme. -->

        <!-- the theme applied to the application or activity -->
        <style name="CustomActionBarTheme"
    parent="Theme.AppCompat.Light.NoActionBar">



        </style>
    <!--<item name="android:logo">@android:color/transparent</item>-->
        <!-- ActionBar styles -->
        <style name="MyActionBar"
            parent="android:Widget.Holo.ActionBar">

            <item name="android:background">@null</item>
            <!-- Support library compatibility -->
            <item name="background">@null</item>
        </style>


    <style name="animationImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>

        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="keypadButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/button_text_color_theme_black</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="keypadButtonStyleL" parent="keypadButtonStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">22dp</item>

    </style>
    <style name="keypadButtonStyleWhite" parent="keypadButtonStyle">
        <item name="android:textColor">@color/button_text_color_theme_white</item>
    </style>
    <style name="keypadButtonStyleLWhite" parent="keypadButtonStyleWhite">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">22dp</item>
    </style>



