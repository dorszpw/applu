<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background_theme_black"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/searchTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/searchText"
                style="@style/searchTextStyleBlack"/>


            <Button
                android:id="@+id/navButtonLeft"
                style="@style/keypadButtonStyle"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|right"
                android:text="◀"
                android:textColor="@color/blue_nasty"
                android:visibility="gone"/>



            <Button
                android:id="@+id/navButtonRight"
                style="@style/keypadButtonStyle"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|left"
                android:text="▶"
                android:textColor="@color/blue_nasty"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                style="@android:style/Widget.Holo.ProgressBar.Small"
                android:visibility="visible"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/searchTextLayout"
            android:src="@drawable/separator" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lastApp1"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp2"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp3"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp4"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp5"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp6"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp7"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp8"
            style="@style/lastAppButtonStyle"/>
        <ImageView
            android:id="@+id/lastApp9"
            style="@style/lastAppButtonStyle"/>

    </LinearLayout>
        <TextView
            android:id="@+id/lastAppsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_apps"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textSize="20sp"
        android:textColor="@color/last_apps_theme_black" />
    </FrameLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/searchTextLayout"
        android:src="@drawable/separator" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launchButton"
            style="@style/actionButtonStyle" />


        <Button
            android:id="@+id/searchButton1"
            style="@style/keypadButtonStyle"
            android:text="abc"

            />

        <Button
            android:id="@+id/searchButton2"
            style="@style/keypadButtonStyle"
            android:text="def"


            />

        <Button
            android:id="@+id/searchButton3"
            style="@style/keypadButtonStyle"
            android:text="ghi"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/uninstallButton"
            style="@style/actionButtonStyle"
            android:src="@drawable/ic_delete_theme_black" />

        <Button
            android:id="@+id/searchButton4"
            style="@style/keypadButtonStyle"
            android:text="jkl"

            />

        <Button
            android:id="@+id/searchButton5"
            style="@style/keypadButtonStyle"
            android:text="mno"

            />

        <Button
            android:id="@+id/searchButton6"
            style="@style/keypadButtonStyle"
            android:text="pqrs" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appSelectorButton"
            style="@style/actionButtonStyle"
            android:padding="2dp"
            android:src="@drawable/filter_all_theme_black" />

        <Button
            android:id="@+id/searchButton7"
            style="@style/keypadButtonStyle"
            android:text="tuv"

            />

        <Button
            android:id="@+id/searchButton8"
            style="@style/keypadButtonStyle"
            android:text="wxyz"

            />

        <FrameLayout style="@style/keypadButtonStyle">

            <ImageView
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/backspace_arrow" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
