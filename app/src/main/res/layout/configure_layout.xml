<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmos_background"
    android:paddingTop="@dimen/ref_30">

    <ImageView
        android:id="@+id/cosmosLogo"
        android:layout_width="@dimen/ref_250"
        android:layout_height="@dimen/ref_250"
        android:layout_centerHorizontal="true"
        android:background="@null"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cosmosLogo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/ref_30">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@+id/countrySpinner"
            android:text=""
            android:textSize="@dimen/ref_font_medium" />



        <ImageButton
            android:id="@+id/confirmationButton"
            android:layout_width="@dimen/ref_100"
            android:layout_height="@dimen/ref_100"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:text=""
            android:layout_gravity="center_horizontal"

            android:background="@null" />


    </LinearLayout>
</RelativeLayout>