<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background_theme_white"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/searchTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/searchText"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:background="@null"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black" />


            <Button
                android:id="@+id/navButtonLeft"
                style="@style/keypadButtonStyleLWhite"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|right"
                android:text="◀"
                android:textColor="@color/blue_nasty"
                android:visibility="gone" />


            <Button
                android:id="@+id/navButtonRight"
                style="@style/keypadButtonStyleLWhite"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical|left"
                android:text="▶"
                android:textColor="@color/blue_nasty"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.Holo.ProgressBar.Small"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.2"
                android:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/searchTextLayout"
            android:src="@drawable/separator" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/lastApp1"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp2"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp3"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp4"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp5"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp6"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp7"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp8"
                style="@style/lastAppButtonStyle" />

            <ImageView
                android:id="@+id/lastApp9"
                style="@style/lastAppButtonStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/lastAppsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="150dp"
            android:text="@string/last_apps"
            android:textColor="@color/last_apps_theme_white"
            android:textSize="20sp" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/searchTextLayout"
        android:src="@drawable/separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/launchButton"
            style="@style/lastAppButtonStyleTight" />


        <Button
            android:id="@+id/searchButton1"
            style="@style/keypadButtonStyleLWhite"
            android:text="abc"

            />

        <Button
            android:id="@+id/searchButton2"
            style="@style/keypadButtonStyleLWhite"
            android:text="def"


            />

        <Button
            android:id="@+id/searchButton3"
            style="@style/keypadButtonStyleLWhite"
            android:text="ghi"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/uninstallButton"
            style="@style/lastAppButtonStyleTight"
            android:src="@drawable/ic_delete_theme_white" />


        <Button
            android:id="@+id/searchButton4"
            style="@style/keypadButtonStyleLWhite"
            android:text="jkl"

            />

        <Button
            android:id="@+id/searchButton5"
            style="@style/keypadButtonStyleLWhite"
            android:text="mno"

            />

        <Button
            android:id="@+id/searchButton6"
            style="@style/keypadButtonStyleLWhite"
            android:text="pqrs" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appSelectorButton"
            style="@style/lastAppButtonStyleTight"
            android:padding="2dp"
            android:src="@drawable/filter_all_theme_white" />

        <Button
            android:id="@+id/searchButton7"
            style="@style/keypadButtonStyleLWhite"
            android:text="tuv"

            />

        <Button
            android:id="@+id/searchButton8"
            style="@style/keypadButtonStyleLWhite"
            android:text="wxyz"

            />

        <LinearLayout style="@style/keypadButtonStyleL"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/backspace_arrow" />
            <ImageView
                android:id="@+id/clearAllButton"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:src="@drawable/cancel_button_128" />

        </LinearLayout>
        </LinearLayout>
</LinearLayout>
